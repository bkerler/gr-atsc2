<?xml version="1.0"?>
<block>
  <name>ATSC2 RX Filter</name>
  <key>atsc2_atsc2_rx_filter</key>
  <category>[atsc2]</category>
  <import>import atsc2</import>
  <make>atsc2.atsc2_rx_filter($rate, $sps)</make>
  <param>
    <name>Input Rate</name>
    <key>rate</key>
    <type>float</type>
  </param>

  <param>
    <name>Oversampling Ratio</name>
    <key>sps</key>
    <type>float</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
